<%-include partials/header.ejs%>
    <%-include partials/main_nav.ejs%>



        <h1>
            <%= title %>
        </h1>
        <p>Welcome to
            <%= title %>
        </p>
        <p>Contact us using the following details: </p>
        <div class="content">
            <div class="container">
                <div class="row align-items-stretch no-gutters contact-wrap">
                    <div class="col-md-8">
                        <div class="form h-100">
                            <h3 style="padding-top:20px">Send me a message by filling out the form:-</h3>
                            <form class="mb-5" id="contactForm" name="contactForm" action="/">
                                <div class="row">
                                    <div class="col-md-6 form-group mb-5">
                                        <label for="" class="col-form-label">First Name *</label>
                                        <input type="text" class="form-control" name="name" id="name" placeholder="Your First name" required="required">
                                    </div>
                                    <div class="col-md-6 form-group mb-5">
                                        <label for="" class="col-form-label">Last Name *</label>
                                        <input type="text" class="form-control" name="email" id="email" placeholder="Your Last Name" required="required">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group mb-5">
                                        <label for="" class="col-form-label">Phone</label>
                                        <input type="tel" class="form-control" name="phone" id="phone" placeholder="XXX-XXX-XXXX" pattern="[0-9]{3})-([0-9]{3})-([0-9]{4}" required="required">
                                    </div>
                                    <div class="col-md-6 form-group mb-5">
                                        <label for="" class="col-form-label">Email Address *</label>
                                        <input type="text" class="form-control" name="company" id="company" placeholder="johnsmith@gmail.com" required="required">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group mb-5">
                                        <label for="message" class="col-form-label">Message *</label>
                                        <textarea class="form-control" name="message" id="message" cols="30" rows="4" placeholder="Write your message" required="required"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="submit" value="Send Message" class="btn btn-primary rounded-0 py-2 px-4">
                                        <span class="submitting"></span>
                                    </div>
                                </div>
                            </form>
                            <div id="form-message-warning mt-4"></div>
                            <div id="form-message-success">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="contact-info h-100">
                            <h3 style="padding-top:20px; text-decoration: underline;">Contact Information</h3>
                            <p class="mb-5"><br>Email: <a href="mailto:amanpreetkaur15112003@gmail.com" style="padding-left: 10px;">Amanpreet Kaur</a><br><br> Contact: +1 (437) 974 2230</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        </div>
        </div>

        <%-include partials/bottom_nav.ejs%>
